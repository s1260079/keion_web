<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
  <div class="form-group">
    <label>User Name</label>
    <input type="user_name" class="form-control" placeholder="User Name">
  </div>

  <div class="form-group">
    <label>Student Id</label>
    <input type="student_id" class="form-control" placeholder="student_id">
  </div>

  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="Email">
  </div>

  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="password">
  </div>

  <div class="form-group">
    <label>Password(confirmation)</label>
    <input type="password_confirmation" class="form-control" placeholder="password(confirmation)">
  </div>

  <!-- 送信ボタン -->
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<% end %>
