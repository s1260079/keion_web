<div class="site-overlay">
    <header id="home">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <%= link_to image_tag('logo_transparent.png', class: 'img-responsive'), root_path %>
                    </div>
                </div>
                <div class="jumbotron">
                    <h1 style="font-size: 300%;font-size: 5vw; margin-top:0px;text-shadow: 1px 1px 1px "><strong>C U O</strong></br>
                    <small>Comfort Utopian Orchestra</small></h1>
                    <p style="font-size: 130%; font-size: 1.2vw;text-shadow: 1px 1px 1px ">This is CUO, a music circle at the University of Aizu. <br>
    The official name of the group is Comfort Utopian Orchestra. Let's play music together!</p>
                    <p>
                    <% if current_user %>
                       <%= link_to 'Logout', :logout, method: :post, class: 'btn btn-lg btn-danger', role: 'button' %>
                    <% elsif %>
                        <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary', role: 'button' %>
                        <%= link_to 'Signup', new_user_path, class: 'btn btn-lg btn-danger', role: 'button' %>
                    <% end %>
                    </p>
                </div>
            </div>
        </div>
    </header>
</div>
