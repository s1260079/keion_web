<div class="container" style="width: 800px;">
  <h1 >Band Data</h1>
  <div style="text-align:center">
    <div class="text-center" style="margin-top: 40px; margin-bottom: 40px;">
      <% if current_user %>
        <%= link_to 'バンドの登録はこちらから' , new_band_path %>
      <% end %>
    </div>
  </div>
  <div style="text-align:center">
      <% @bands.each do |band| %>
        <div style="display:inline-block; margin-left: 20px; margin-top: 40px;">
          <div style="box-shadow: 2px 2px 4px gray;"><%= link_to image_tag(band.avatar_path.url, size:'200x200'), band_path(band) %></div>
          <div style="margin-top: 5px">・<%= link_to band.band_name, band_path(band),class: 'link' %></div>
        </div>
      <% end %>
  </div>
</div>
