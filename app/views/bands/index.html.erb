<div class="container" style="width: 800px;">
  <h1 >Band Data</h1>
  <div style="text-align:center">
    <div class="text-center" style="margin-top: 40px; margin-bottom: 40px;">
      <% if current_user %>
        <%= link_to 'バンドの登録はこちらから' , new_band_path %>
      <% end %>
    </div>
  </div>
  <div>
    <div class="card-columns">
        <% @bands.each do |band| %>
          <div class="card" style=" box-shadow: 2px 2px 4px gray;margin-bottom: 40px;" >
            <div class="card-body " style="height: 225px;" >
              <h5 class="card-title" >＜<%= link_to band.band_name, band_path(band),class: 'link' %>＞</h5>
              <p class="card-text" style="white-space: pre-wrap;"><%=band.band_members %></p>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
