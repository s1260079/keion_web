<div class="title">
    <h2 >Band Data</h2>
</div>
<div class="container">
  <div class="row">
      <% @bands.each do |band| %>
        <div class="col-12 col-md-6 col-lg-3" style="margin-top: 40px;">
          <div><%= link_to image_tag(band.avatar_path.url, size:'220x220'), band_path(band) %></div>
          <div style="margin-top: 5px">・<%= link_to band.band_name, band_path(band),class: 'link' %></div>
        </div>
      <% end %>
  </div>
  <div class="text-center" style="margin-top: 40px; margin-bottom: 40px;">
      <% if current_user %>
        <%= link_to 'バンドの登録はこちらから' , new_band_path %>
      <% end %>
  </div>
</div>
