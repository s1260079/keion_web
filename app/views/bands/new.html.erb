<div class="container" style="width: 800px;">
  <h1 style="text-align:center">Bandの登録</h1>
    <%= form_with url: "/bands", method: :band, local: true do |f| %>
        <div class="form-group">
          <label>Band Name</label>
            <%= f.text_field :band_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Band Members</label>
            <%= f.text_area :band_members, :size=>"10x10" ,class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Message</label>
            <%= f.text_area :band_message, class: "form-control" %>
        </div>
        <div class="text-center">
            <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
