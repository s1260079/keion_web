<div class="title">
    <h2 >Band</h2>
</div>
<div class="container">
  <p style="margin-top: 40px;"></p>
  <div class="card" style="width: 500px; margin:  0 auto; box-shadow: 2px 2px 4px gray;margin-bottom: 40px;">
    <h3 style="text-align: center;">BAND INTORODUCTION SHEET</h3>

    <p style="text-align: center;">
        <%= image_tag(@band.avatar_path.url, size:'180x180') %>
    </p>

    <div class="text-left" style="margin-bottom: 40px; margin-left: 40px;">

      <p class="bandSpace">
      <strong>BAND NAME</strong>
      <div>　<%= @band.band_name %></div>
      </p>

      <p class="bandSpace">
        <strong>MEMBERS</strong>
        <div style="white-space: pre-wrap;margin-left: 20px;"><%= @band.band_members     %></div>
      </p>

      <p class="bandSpace">
        <strong>A FEW WORDS</strong>
        <div >　<%= @band.band_message %></div>
      </p>
    </div>

    <div style="text-align: center;">
      <%= image_tag 'IMG_6607', size: '50x50'%>
    </div>
  </div>
  <div style="text-align: center;">
    <% if current_user && current_user.id == @band.user_id %>
      <%= link_to 'Edit', edit_band_path(@band) %> |
      <%= link_to 'Destroy', @band, method: :delete, data: { confirm: 'Are you sure'  }    %>|
    <% end %>
      <%= link_to 'Back', bands_path %>
  </div>
</div>
