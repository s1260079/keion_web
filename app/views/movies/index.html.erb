<div class="allPage">
  <h1 > Movies</h1>
  <div style="text-align:left">
      <% @movies.each do |movie| %>
        <div>・<%= link_to movie.title, movie_path(movie),class: 'link' %></div>
        <div><%= Rinku.auto_link(movie.content, :all, 'target="_blank"').html_safe %></div>
      <% end %>
  </div>
  <div class="text-center" style="margin-top: 40px; margin-bottom: 40px;">
      <% if current_user %>
        <%= link_to '動画の追加はこちらから' , new_movie_path %>
      <% end %>
  </div>
</div>
